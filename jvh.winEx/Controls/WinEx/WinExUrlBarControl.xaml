<UserControl x:Class="jvh.winEx.Controls.WinEx.WinExUrlBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:jvh.winEx.Controls.WinEx"
             mc:Ignorable="d" d:DesignWidth="800" Height="52.146">
    <Grid>
        <Label Content="Path: " HorizontalAlignment="Left" Margin="85,0" VerticalAlignment="Center"/>
        <TextBox Name="TextBoxTargetDirectory" Height="24" Margin="130,14,90,14" TextWrapping="Wrap" Text="{Binding TargetDirectory, Mode=OneWay}" VerticalAlignment="Center"/>
        <Button Content="Go" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Width="75" Click="ButtonBase_OnClick"/>
        <Button Name="ButtonGoBack" Content="Back" HorizontalAlignment="Left" Margin="5,15,0,15" VerticalAlignment="Center" Width="75" Click="ButtonGoBack_OnClick"/>
    </Grid>
</UserControl>
